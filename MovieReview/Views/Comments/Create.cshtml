@model DataAccess.Entities.Comment
    
@{
	string message;
	string color;
}
@if (ViewBag.Message != null)
{
	message = ViewBag.Message.ToString();
	color = "success";
	if (message.EndsWith("!"))
	{
		color = "danger";
	}
	<p class="text-@color">
		@message
	</p>
}
@if (TempData["Message"] != null)
{
	message = TempData["Message"].ToString();
	color = "success";
	if (message.EndsWith("!"))
	{
		color = "danger";
	}
	<p class="text-@color">
		@message
	</p>
}
    
@{
    ViewData["Title"] = "Create";
}

<h1>@ViewData["Title"]</h1>

<h4>Comment</h4>
<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Create">
		    @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row mb-3">
                <label asp-for="UserComment" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="UserComment" class="form-control" />
					<span asp-validation-for="UserComment" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="UserId" class="col-2 col-form-label"></label>
				<div class="col-5">
					<select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId">
						<option value="">-- Select --</option>
					</select>
					<span asp-validation-for="UserId" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="MovieId" class="col-2 col-form-label"></label>
				<div class="col-5">
					<select asp-for="MovieId" class="form-control" asp-items="ViewBag.MovieId">
						<option value="">-- Select --</option>
					</select>
					<span asp-validation-for="MovieId" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="AddedDateTime" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="AddedDateTime" class="form-control" />
					<span asp-validation-for="AddedDateTime" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
				<label asp-for="IsActive" class="col-2 col-form-label"></label>
				<div class="col-5" style="padding-top: 7px;">
					<input class="form-check-input" asp-for="IsActive" />
                </div>
            </div>
            <div class="row mb-3">
				<div class="offset-2 col-5">
					<input type="submit" value="Save" class="btn btn-primary" />
					&nbsp;&nbsp;
                    <button type="reset" class="btn btn-outline-primary">Reset</button>
					&nbsp;&nbsp;
					<a asp-action="Index">Back to List</a>
				</div>
            </div>
        </form>
    </div>
</div>




